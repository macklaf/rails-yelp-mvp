<div class="container">
  <h1>Add new Restaurant </h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::CATEGORIES  %>
    <%= f.input :phone_number %>
    <%= f.submit :create_restaurant, class: "btn btn-primary"%>
  <% end %>
</div>
